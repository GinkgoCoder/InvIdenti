<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="ColoredConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%msg%n%throwable}{FATAL=Blinking bright red, ERROR=bright red, WARN=orange, INFO=blue, DEBUG=green, TRACE=bright black}"/>
            <filters>


                <Thresholdfilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </filters>
        </Console>

    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="ColoredConsole" level="trace"/>
        </Root>
    </Loggers>
</Configuration>